<div class="container">

    <div class="row mb-4 mt-4">
        <div class="col-10">
            <img src="assets/img/logomovie.png" class="img-logo" alt="logo">
        </div>

        <div class="col-2">
            <form action="/profile" method="GET">
                {{!-- <form action="/:movie" method="GET"> --}}
                    <button class="profile-page btn btn-primary btn-sm" type="submit">Click to go to your profile</button>
                </form>
        </div>
    </div>

    <div class="row mb-4 mt-4">
        <div class="col">
            <h1 class="text-center">Welcome to your page! You're now logged in!</h1>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col">
            <h3 class="text-center mt-3 mb-3">Search for a movie or show here to add to your profile.</h3>
        </div>
    </div>

    <div class="row mb-4 mt-4 justify-content-center">

        <form class="form-inline my-2 my-lg-0" action="/search" method="POST">
            <input class="form-control mr-sm-2" type="search" placeholder="Search topics or keywords" aria-label="Search"
                name="movieTitle">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search movie</button>
        </form>

    </div>

    <div class="row align-items-center">
        {{#each movies}}
        {{!-- this will be for the photo --}}
        <div class="col-2"></div>
        <div class="col-2">
            <img style="width:100px;height:150px;" src="https://image.tmdb.org/t/p/w300/{{{pic}}}">
        </div>
        <div class="col-5 ">
            <h3>{{title}} - {{year}}</h3>
        </div>

        <div class="col-2">
            <button class="save-button btn-sm btn-success" data-id="{{this.id}}" data-title="{{this.title}}" data-pic="{{this.pic}}">Add
                to Saved!</button>
        </div>
         <div class="col-1"></div>
        {{/each}}

    </div>

</div>

</div>

<div class="row mt-2">
    <div class="col">
        <h2 class="text-center mt-3 mb-3">Scroll to find the top Movies in 2018:</h2>
    </div>
</div>

<div class="row mt-2">
    <div class="col">
        <div id="movieCarousel" class="carousel slide w-100" data-ride="carousel">
            <div class="carousel-inner w-100" role="listbox" id="movie-display" data-interval="false">
            </div>

            <a class="carousel-control-prev" href="#movieCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#movieCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col">
        <h2 class="text-center">Scroll to find the top TV-Shows in 2018:</h2>
    </div>
</div>

<div class="row mt-2 mb-4">
    <div id="tvCarousel" class="carousel slide w-100" data-ride="carousel" data-interval="false">
        <div class="carousel-inner w-100" role="listbox" id="tv-display">
        </div>

        <a class="carousel-control-prev" href="#tvCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#tvCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
</div>

<script src="https://www.gstatic.com/firebasejs/5.7.1/firebase.js"></script>
<script src="assets/js/login.js"></script>
<script src="assets/js/app.js"> </script>